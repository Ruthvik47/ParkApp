<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.abcexample.parkapp.ParkAppHomeActivity"
    tools:showIn="@layout/app_bar_park_app_home"
    android:background="#000000"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal|center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp">

        <LinearLayout
            android:id="@+id/HomeLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DCDCDC"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal|center"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <ImageView
                android:id="@+id/MallButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="onClick1"
                android:src="@drawable/mall_logo"
                android:padding="2dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/StadiumButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="onClick2"
                android:src="@drawable/stadium_logo"
                android:padding="2dp"
                android:layout_margin="5dp" />


            <ImageView
                android:id="@+id/TheathreButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="onClick3"
                android:src="@drawable/theatre_logo"
                android:padding="2dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/StationButton"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:onClick="onClick4"
                android:src="@drawable/stations_logo"
                android:padding="2dp"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
